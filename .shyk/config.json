{
  "version": "0.1.0",
  "rules": {
    "authModification": {
      "enabled": true,
      "severity": "HIGH"
    },
    "validationRemoval": {
      "enabled": true,
      "severity": "HIGH"
    },
    "errorSwallowing": {
      "enabled": true,
      "severity": "MEDIUM"
    },
    "asyncAwait": {
      "enabled": true,
      "severity": "MEDIUM"
    },
    "envChanges": {
      "enabled": true,
      "severity": "HIGH"
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".git"
  ]
}